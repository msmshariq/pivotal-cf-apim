set +e
set -xv

script_dir=$(dirname $0)
job_dir=${script_dir}/..

run_dir=/var/vcap/sys/run/nfs_server
log_dir=/var/vcap/sys/log/nfs_server
pid_file=${run_dir}/pid

mkdir -p ${run_dir} ${log_dir}
chown -R vcap:vcap ${run_dir} ${log_dir}


export DEBUG_LOG=${log_dir}/nfs_server.log

touch $DEBUG_LOG
chmod -R 755 /var/vcap/sys
chmod 777 $DEBUG_LOG

function log_debug() {
  echo `date` $1 >> $DEBUG_LOG
}

log_debug "Kicking off ctl script as `whoami` with $1"

# install nfs packages
apt-get update
apt-get install nfs-kernel-server

# create the share directory and set permission

mkdir -p /mnt/nfs-export/wso2am/deployment-server
mkdir -p /mnt/nfs-export/wso2am/deployment-tenants

chown nobody:nogroup /mnt/nfs-export/wso2am/deployment-server
chown nobody:nogroup /mnt/nfs-export/wso2am/deployment-tenants

# configure the exports
echo '/mnt/nfs-export/wso2am/deployment-server    *(rw,sync,no_subtree_check)' >> /etc/exports
echo '/mnt/nfs-export/wso2am/deployment-tenants    *(rw,sync,no_subtree_check)' >> /etc/exports

exportfs -a


case $1 in

  start)
    # kill the previously running instance if any
    # kill -9 `cat ${pid_file}`

    service nfs-kernel-server start

    sleep 20

    nfs_pid=`ps aux | grep -w nfsd | grep -v grep | awk '{print$2}'`
    echo $nfs_pid > ${pid_file}

    ;;

  stop)

    # kill -9 `cat ${pid_file}`
    # rm -f ${pid_file}

    service nfs-kernel-server stop

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
